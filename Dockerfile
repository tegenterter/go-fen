FROM golang:latest

ARG DIMENSION
ARG ASSETS_PATH
ARG LIGHT_SQUARE_RGB
ARG DARK_SQUARE_RGB

ENV DIMENSION $DIMENSION
ENV ASSETS_PATH $ASSETS_PATH
ENV LIGHT_SQUARE_RGB $LIGHT_SQUARE_RGB
ENV DARK_SQUARE_RGB $DARK_SQUARE_RGB

ADD src /app

WORKDIR /app

RUN go build -o main .

EXPOSE 8080

CMD ["/app/main"]
